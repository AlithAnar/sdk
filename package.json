{
  "name": "microlinkjs",
  "description": "Convert your links into beautiful previews",
  "devDependencies": {
    "browser-sync": "latest",
    "concurrently": "latest",
    "conventional-changelog-cli": "latest",
    "docsify": "latest",
    "eachdir": "latest",
    "finepack": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-concat": "latest",
    "gulp-cssnano": "latest",
    "gulp-strip-css-comments": "latest",
    "gulp-uglify": "latest",
    "husky": "latest",
    "lerna": "latest",
    "lint-staged": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "build": "gulp build",
    "build:packages": "lerna run build",
    "changelog": "conventional-changelog --release-count=0 > CHANGELOG.md",
    "changelog:commit": "npm run changelog && git add CHANGELOG.md && git commit -m 'Update Changelog' && git push master",
    "clean": "rm -rf node_modules && cd packages && eachdir rm -rf node_modules",
    "dev": "concurrently 'gulp' 'browser-sync start --server --files \"index.html, README.md, static/**/*.(css|js)\"'",
    "lint": "standard-markdown && standard src",
    "postinstall": "lerna bootstrap && lerna link --force-local",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "pretty": "prettier-standard src/**/*.{js,css} --single-quote",
    "publish": "npm run build:packages && npm run changelog && git add . && lerna publish --sort",
    "test": "lerna exec npm run test"
  },
  "private": true,
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{js,css}": [
      "prettier-standard",
      "git add"
    ],
    "package.json": [
      "finepack",
      "git add"
    ]
  }
}
