{
  "name": "react-microlink",
  "description": "Microlink card(s) for React",
  "version": "0.1.0-alpha",
  "author": {
    "name": "Brad Adams",
    "email": "hi@breadadams.com",
    "url": "https://breadadams.com"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-component",
    "microlink",
    "data-extraction"
  ],
  "dependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-domain": "~2.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "^4.2.1",
    "react-dom": "^16.2.0",
    "style-loader": "0.19.0",
    "styled-components": "~2.2.4",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@storybook/react": "latest",
    "babel-cli": "latest",
    "babel-eslint": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-flow": "latest",
    "babel-preset-react": "latest",
    "babel-preset-stage-0": "latest",
    "eslint-plugin-flowtype": "latest",
    "flow-bin": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "lib": "babel src/ -d lib/",
    "test": "node scripts/test.js --env=jsdom",
    "prelint": "npm run pretty",
    "precommit": "lint-staged",
    "precommit-lint": "prettier-standard",
    "lint": "standard-markdown && standard",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "pretest": "npm run lint",
    "pretty": "prettier-standard {src,config,build,stories}/**/*.js",
    "prepublish": "yarn run build"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.js": [
      "precommit-lint",
      "git add"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "jsx-a11y"
    ]
  }
}
