{
  "name": "microlink",
  "description": "Convert your links into beautiful previews",
  "version": "0.1.0-alpha",
  "main": "lib/index.js",
  "author": {
    "email": "hi@breadadams.com",
    "name": "Brad Adams",
    "url": "https://breadadams.com"
  },
  "contributors": [
    {
      "name": "Kiko Beats",
      "email": "josefrancisco.verdu@gmail.com",
      "url": "https://github.com/Kikobeats"
    }
  ],
  "keywords": [
    "data",
    "extraction",
    "link",
    "microlink",
    "preview",
    "previsualization"
  ],
  "dependencies": {
    "babel-core": "~6.26.0",
    "babel-jest": "~21.2.0",
    "babel-loader": "~7.1.2",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-app": "~3.1.0",
    "babel-preset-react-optimize": "~1.0.1",
    "babel-runtime": "~6.26.0",
    "case-sensitive-paths-webpack-plugin": "~2.1.1",
    "chalk": "~2.3.0",
    "dom101": "~2.2.1",
    "dotenv": "~4.0.0",
    "eslint-plugin-jsx-a11y": "~6.0.2",
    "extract-domain": "~2.0.0",
    "extract-text-webpack-plugin": "~3.0.2",
    "fs-extra": "~4.0.2",
    "html-webpack-plugin": "~2.30.1",
    "jest": "~21.2.1",
    "postcss-flexbugs-fixes": "~3.2.0",
    "preact-compat": "~3.17.0",
    "react": "~16.2.0",
    "react-dev-utils": "~4.2.1",
    "react-dom": "~16.2.0",
    "styled-components": "~2.2.4",
    "unminified-webpack-plugin": "~1.4.2",
    "webpack": "~3.9.1",
    "webpack-manifest-plugin": "~1.3.2"
  },
  "devDependencies": {
    "@storybook/react": "latest",
    "babel-cli": "latest",
    "babel-eslint": "7.2.1",
    "eslint-plugin-flowtype": "latest",
    "flow-bin": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier-standard": "latest",
    "size-limit": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "unfetch": "latest",
    "webpack-dev-server": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "build": "node scripts/build",
    "build-storybook": "build-storybook",
    "flow": "flow",
    "lib": "babel src -d lib",
    "lint": "standard-markdown && standard src stories",
    "postinstall": "npm run lib",
    "posttest": "npm run size",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin}/**/*.js --single-quote",
    "size": "size-limit",
    "start": "node scripts/start.js",
    "storybook": "start-storybook -p 6006",
    "test": "exit 0"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "mjs",
      "node",
      "web.js",
      "web.jsx"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}",
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js",
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "lint-staged": {
    "*.js": [
      "flow",
      "prettier-standard",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "./lib",
      "limit": "50 kB"
    }
  ],
  "standard": {
    "globals": [
      "React",
      "fetch"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "jsx-a11y"
    ]
  }
}
